function refreshPriestBook()
	if currentSpellLevel == nil then
		currentSpellLevel = 1
	end
	if characters[id].hasClericBook then
		newBottomSpells = filterMemorizedPriestSpells()
		newBottomSpells1 = filterMemorizedPriestSpells1()
		newBottomSpells2 = filterMemorizedPriestSpells2()
		newBottomSpells3 = filterMemorizedPriestSpells3()
		newBottomSpells4 = filterMemorizedPriestSpells4()
		newBottomSpells5 = filterMemorizedPriestSpells5()
		newBottomSpells6 = filterMemorizedPriestSpells6()
		newBottomSpells7 = filterMemorizedPriestSpells7()

		if showPriestMemorizationFlash == true then
			createPriestMemorizationSparkle(0,0,36,36,"memorizedListPriest", findFirstDifferenceInSpellList(bottomSpells, newBottomSpells))
			showPriestMemorizationFlash = false
