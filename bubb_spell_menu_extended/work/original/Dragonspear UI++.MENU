		bottomSpellsPlaceHolder5 = {}
		bottomSpellsPlaceHolder6 = {}
		bottomSpellsPlaceHolder7 = {}
	end
end

function setPriestBookLevel(num)
	currentBookSpell = 0
	currentSpellLevel = num
	refreshPriestBook()
end

function incrementPriestBookLevel()
	if currentSpellLevel == 1 then
		setPriestBookLevel(2)
		currentBookSpell = 0
		currentSpellLevel = 2
		PriestScreen:SetSpellLevel(2-1)
		getPrSpellButtHighlight(2)
		refreshPriestBook()
	elseif currentSpellLevel == 2 then
		setPriestBookLevel(3)
		currentBookSpell = 0
		currentSpellLevel = 3
		PriestScreen:SetSpellLevel(3-1)
		getPrSpellButtHighlight(3)
		refreshPriestBook()
	elseif currentSpellLevel == 3 then
		setPriestBookLevel(4)
		currentBookSpell = 0
		currentSpellLevel = 4
		PriestScreen:SetSpellLevel(4-1)
		getPrSpellButtHighlight(4)
		refreshPriestBook()
	elseif currentSpellLevel == 4 then
