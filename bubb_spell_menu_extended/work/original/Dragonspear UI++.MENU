function setCurrent()
	PWSMod = CurrentVer
	Infinity_SetINIValue('Game Options','PWSFirstLoad','2.21')
	Infinity_PopMenu('FirstLoad')
end
CurrentVer = "2.21" 		-- This is what you will call this version when you release it
OldVer = "2.2" 			-- This is the highest older version
