		local current = mpChatTable[#mpChatTable]
		if(current == nil) then
			return 0
		end
		if(current.displayTime == nil) then
			current.displayTime = 500

			--set the box size
			Infinity_ScaleToText("mpChatPreview")

			--give some extra room for the padding
			adjustItemGroup({"mpChatPreview"},0,0,0,16)
