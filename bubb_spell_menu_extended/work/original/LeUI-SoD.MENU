		createCharScreen:OnMemorizeMageSpellButtonClick(row, 1)
		selectable = createCharScreen:IsDoneButtonClickable()
		createCharScreen:OnMemorizeMageSpellButtonClick(row, -1)
		if not selectable then needSpecialist = true end
	end
	return selectable
